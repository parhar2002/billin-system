@model WebApplication1.Models.Item

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-4 mb-4">Create Item</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-row row mb-3">
                <div class="col-md-6">
                    <label asp-for="ItemName" class="form-label fw-bold"></label>
                    <input asp-for="ItemName" class="form-control" placeholder="Enter Item name" />
                    <span asp-validation-for="ItemName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CompanySrNo" class="form-label fw-bold">Company</label>
                    <select asp-for="CompanySrNo" asp-items="@(new SelectList(Model.Companies, "SrNo", "CompanyName"))" class="form-select">
                        <option value="">-- Select Company --</option>
                    </select>
                    <span asp-validation-for="CompanySrNo" class="text-danger"></span>
                </div>

                
            </div>

            <div class="form-row row mb-3">
                <div class="col-md-4">
                    <label asp-for="Mrp" class="form-label fw-bold"></label>
                    <input asp-for="Mrp" class="form-control" placeholder="Enter MRP" />
                    <span asp-validation-for="Mrp" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Tax" class="form-label fw-bold"></label>
                    <input asp-for="Tax" class="form-control" placeholder="Enter Tax %" />
                    <span asp-validation-for="Tax" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="SalesRate" class="form-label fw-bold"></label>
                    <input asp-for="SalesRate" class="form-control" placeholder="Enter sales rate" />
                    <span asp-validation-for="SalesRate" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit button -->
            <div class="text-end">
                <input type="submit" value="Create" class="btn btn-success px-4" />
            </div>
        </form>
    </div>
</div>

<!-- Back to list -->
<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<!-- Validation scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
